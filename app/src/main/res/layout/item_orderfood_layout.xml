<?xml version="1.0" encoding="utf-8"?>
<com.example.orderfood.view.MySqureRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_normal"
    android:layout_marginTop="@dimen/margin_normal"
    android:background="@drawable/selector_item_orderfood_item_bg"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_small"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="鱼香肉丝"
        android:textColor="@color/textcolor_black"
        android:textSize="@dimen/text_size_xl" />

    <View
        android:id="@+id/space_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space_height_s"
        android:layout_above="@id/textview"
        android:layout_marginLeft="@dimen/line_space_height_s"
        android:layout_marginRight="@dimen/line_space_height_s"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/space_line_view" />

    <FrameLayout
        android:id="@+id/add_to_car_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/color1"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_small"
            android:text="@string/add_to_shopcar"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_l" />

        <TextView
            android:id="@+id/num_tip_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|right"
            android:background="@drawable/shape_food_num_tip_bg_color"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_s"
            android:visibility="gone" />
    </FrameLayout>
</com.example.orderfood.view.MySqureRelativeLayout>